<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>Don't Forget to Plant It!</title>
 <link href="http://blog.sourcebender.com/atom.xml" rel="self"/>
 <link href="http://blog.sourcebender.com/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://blog.sourcebender.com/</id>
 <author>
   <name>Calvin Yu</name>
   <email>me@sourcebender.com</email>
 </author>

 {% for post in site.posts limit:15 %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="http://blog.sourcebender.com{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://blog.sourcebender.com{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
 
</feed>